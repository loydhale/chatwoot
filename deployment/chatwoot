# give deskflows user permission to start/stop/restart deskflows systemd service

%deskflows ALL=NOPASSWD: /bin/systemctl start deskflows.target
%deskflows ALL=NOPASSWD: /bin/systemctl stop deskflows.target
%deskflows ALL=NOPASSWD: /bin/systemctl restart deskflows.target
%deskflows ALL=NOPASSWD: /usr/local/bin/cwctl
