[Unit]
Requires=network.target
PartOf=deskflows.target

[Service]
Type=simple
User=deskflows
WorkingDirectory=/home/deskflows/deskflows

ExecStart=/bin/bash -lc 'dotenv bundle exec sidekiq -C config/sidekiq.yml'

Restart=always
RestartSec=1
TimeoutStopSec=30
KillMode=mixed
StandardInput=null
SyslogIdentifier=%p

MemoryMax=1.2G
MemoryHigh=infinity
MemorySwapMax=0
OOMPolicy=stop

Environment="PATH=/home/deskflows/.rvm/gems/ruby-3.4.4/bin:/home/deskflows/.rvm/gems/ruby-3.4.4@global/bin:/home/deskflows/.rvm/rubies/ruby-3.4.4/bin:/home/deskflows/.rvm/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/snap/bin:/home/deskflows/.rvm/bin:/home/deskflows/.rvm/bin"
Environment="PORT=3000"
Environment="RAILS_ENV=production"
Environment="NODE_ENV=production"
Environment="RAILS_LOG_TO_STDOUT=true"
Environment="GEM_HOME=/home/deskflows/.rvm/gems/ruby-3.4.4"
Environment="GEM_PATH=/home/deskflows/.rvm/gems/ruby-3.4.4:/home/deskflows/.rvm/gems/ruby-3.4.4@global"
